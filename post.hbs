{{!< default}}
<article class="container {{post_class}}" id="post-{{id}}">
	{{#post}}
		<header class="c-10 off-01 post-header">
			<h1>{{{title}}}</h1>
		</header>
		<section class="c-10 off-01 post-content">
			{{content}}
		</section>
		<footer class="post-footer">
			<div class="c-03 post-metadata">
				<p><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM DD, YYYY'}}</time></p>
			</div>
			<div class="c-09 post-tags">
				{{#if tags}}
				<p>Tagged with:</p>
				<ul>
					{{#foreach tags}}
						<li><a href="{{url}}">{{name}}</a></li>
					{{/foreach}}
				</ul>
				{{else}}
				<p>This post was not tagged.</p>
				{{/if}}
			</div> 
			<div class="c-12 post-sharing">
				<p class="right"><a href="https://twitter.com/share?text={{encode title}}%20by%20@LucasKTLee&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Comment on Twitter</a></p>
			</div>
		</footer>
	{{/post}}
</article>