/* clearfix to clear floating elements */	
clearfix()
	zoom: 1
	&:before,
	&:after 
		content: ""
		display: table
	&:after 
		clear: both

/* all caps gotham ssm -- style used in time, and headings for site #footer */
f-gotham-ssm-allcaps(c, fs, lh = false, mb = false)
	color: c
	font-family: ff-gotham-ssm, "Proxima Nova", Gibson, sans-serif
	font-size: fs 
	font-weight: fw-light
	hyphenate(none)
	if lh != false
		line-height: lh
	if mb != false
		margin-bottom: mb
	text-transform: uppercase

/* set hyphenation for elements */
hyphenate(v)
	hyphens: v
	-moz-hyphens: v
	-ms-hyphens: v
	-o-hyphens: v
	-webkit-hyphens: v